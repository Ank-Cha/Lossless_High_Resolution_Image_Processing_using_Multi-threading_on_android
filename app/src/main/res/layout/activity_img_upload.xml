<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".ImgUploadActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Uploaded Image appears here"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <TextView
                android:id="@+id/textViewimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image path appears here"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/UploadButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image in single-thread processing" />

            <Button
                android:id="@+id/UploadButtonMulti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image in multi-thread processing" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>